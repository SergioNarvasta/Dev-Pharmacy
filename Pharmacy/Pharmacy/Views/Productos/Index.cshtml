@model IEnumerable<Pharmacy.Models.Entities.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Gestion de Productos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Registrar</a>
</p>
<table class="table table-bordered">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Correlativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCientifico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Concentracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Presentacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restriccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodDetVenta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Correlativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCientifico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concentracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Presentacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restriccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodDetVenta)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CodProducto">Edit</a> |
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.CodProducto">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CodProducto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
